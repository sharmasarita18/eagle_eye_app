pipeline {
    agent {
        dockerfile true
    }
    stages {
        stage("Fix the permission issue") {

            agent any

            steps {
                sh "sudo chown root:jenkins /run/docker.sock"
            }

        }
        stage('Stage 1') {
            steps {
                echo 'Hello world!' 
                sh 'echo myname = $myname'
            }
        }
    }
}